@model RoofSafety.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_NoLayout";
}
<div class="text-center container border" />
    <h5 class="display-8">Login</h5>
    <h4 style="color:red">@Model.Error</h4>
<form method="post">
    <div>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
            <div class="col-2"><label asp-for="Email"></label></div>
            <div class="col-3"><input type="text" asp-for="Email" class="form-control" /></div>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"><label asp-for="password"></label></div>
            <div class="col-3"><input type="text" asp-for="password" class="form-control" /></div>
            <span class="text-danger" asp-validation-for="password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"><button class="btn btn-primary" type="submit">Login</button></div>
        </div>
     
    </div>
</form>
</div>

