@model RoofSafety.Models.Inspection

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Inspection</h2>
<hr />
<div class="row" style="width:600px">
    <div class="col-md-4" style="width:600px">
        <form asp-action="Edit" width="600px" style="width:600px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id"  />
            <div class="form-group" width="600px" style="width:600px">
                <input type="submit" value="Save" class="btn btn-primary" />
    
                <a asp-action="Copy" style="width:500px" width="500px" asp-controller="Inspections" asp-route-id="@Model.id">Copy Inspection to new (todays date) all items / results / no photos</a>

            </div>
            <div class="form-group">
                <label asp-for="InspectionDate" class="control-label"></label>
                <input asp-for="InspectionDate" class="form-control" />
                <span asp-validation-for="InspectionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspectorID" class="control-label"></label>
                <select asp-for="InspectorID" class="form-control" asp-items="@(new SelectList(ViewBag.InspectorID, "Value", "Text"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Inspector2ID" class="control-label"></label>
                <select asp-for="Inspector2ID" class="form-control" asp-items="@(new SelectList(ViewBag.InspectorID, "Value", "Text"))"></select>
            </div>
            <img src="@Model.Photo" width="@RoofSafety.Controllers.HomeController.WidthImage" />
            <div class="form-group" hidden="hidden">
                <label asp-for="Photo" class="control-label"></label>
                <select asp-for="Photo" class="form-control" asp-items="@(new SelectList(ViewBag.InspectorID, "Value", "Text"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@(new SelectList(ViewBag.Status, "Value", "Text"))"></select>

            </div>
            <div class="form-group">
                <label asp-for="Areas" class="control-label"></label>
                <input asp-for="Areas" class="form-control" />
                <span asp-validation-for="Areas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestingInstruments" class="control-label"></label>
                <input asp-for="TestingInstruments" class="form-control" />
                <span asp-validation-for="TestingInstruments" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuildingID" class="control-label"></label>
                <select asp-for="BuildingID" class="form-control" asp-items="ViewBag.BuildingID"></select>
                <span asp-validation-for="BuildingID" class="text-danger"></span>
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="InspectionsForBuilding" asp-route-id="@Model.BuildingID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
